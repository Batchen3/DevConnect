pipeline {
    agent any 

    // environment {
    //     PATH = "${tool 'Python3'}/bin:${env.PATH}"
    // }
    stages {
        stage('Build') {
            steps {
                dir('django_web_app'){
                    sh "docker build -t dev_connect_app:1.0.4 ."
                    sh "docker images"
                }
            }
        }
        stage('Test') {
            steps {
                dir('django_web_app'){
                    sh "docker rm dev_connect_app_con"
                    sh "docker run --name dev_connect_app_con -d -p 8000:8000 dev_connect_app:1.0.4"
                    sh "docker exec -it dev_connect_app_con python manage.py test"
                    //sh "sudo apt-get install -y python3"
                    //sh "sudo apt-get install -y python3"
                    //sh "chmod +x manage.py"
                    //sh "python3 -m venv .venv"
                    //sh "source .venv/bin/activate"
                    //sh "python3 -m pip install -r requirements.txt"
                    //sh "python manage.py test"
                    // echo 'Running Django tests...'
                    // sh 'ls Django-WebApp/django_web_app/'
                    // sh 'docker ps'
                    // sh 'docker exec devconnect-con9 ls'
                    // sh 'docker exec devconnect-con9 python django_web_app/manage.py test'
                








                }
            }
        }
    }
    post {
        always {
            deleteDir() 
        }
        success {
            echo 'build succeeded!'
        }
        failure {
            echo 'the pipeline failed :('
        }
    }
}

