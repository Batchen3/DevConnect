pipeline {
    agent any 

    // environment {
    //     PATH = "${tool 'Python3'}/bin:${env.PATH}"
    // }
    stages {
        stage('Build') {
            steps {
                dir('django_web_app'){
                    sh "docker build -t dev_connect_app:1.0.4 ."
                    sh "docker images"
                }
            }
        }
        stage('Test') {
            steps {
                dir('django_web_app'){
                    sh "docker run --name dev_connect_app_con_5 -d -p 8780:8000 dev_connect_app:1.0.4"
                    sh "docker exec dev_connect_app_con_5 python manage.py test"
                }
            }
        }
          stage('Push') {
            steps {
                dir('django_web_app'){
                    sh 'docker tag dev_connect_app:1.0.4 me-west1-docker.pkg.dev/devconnect-project/batchen-artifacts/dev_connect_app:1.0.4'
                    sh 'docker me-west1-docker.pkg.dev/devconnect-project/batchen-artifacts/dev_connect_app:1.0.4'
                }
            }
        }
    }
    post {
        always {
            deleteDir() 
        }
        success {
            echo 'build succeeded!'
        }
        failure {
            echo 'the pipeline failed :('
        }
    }
}

